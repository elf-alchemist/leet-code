{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ESNext"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "allowJs": true,
    "checkJs": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
  },
  "include": ["./src/**/*.js", "./test/**/*.js"],
  "exclude": ["node_modules", "**/node_modules/*", "dist", "**/dist/*"]
}
