{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ESNext"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": false,

    "allowJs": true,
    "checkJs": true,
    "alwaysStrict": true,

    "strict": true,
    "strictNullChecks": true,
    "noUncheckedIndexedAccess": true
  },
  "include": ["src/"],
  "exclude": ["**/node_modules/**","**/dist/**"]
}
